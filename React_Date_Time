import React, { useState } from "react";
import "./styles.css";

const App = () => {
  let time = new Date().toLocaleDateString();
  //Using hooks display current time
  const [ctime, setTime] = useState(time);

  const UpdateTime = () => {
    time = new Date().toLocaleTimeString();
    setTime(time);
  };

//Using hooks change color particular state
  const color = "purple";
  const [bg, setbg] = useState(color);

  const bgChange = () => {
    console.log("clicked");
    let setColor = "red";
    setbg(setColor);
  };

  //Automatically update time
  setInterval(UpdateTime, 1000);

  return (
    <>
      <div style={{ backgroundColor: bg }}>
        <h1>{ctime}</h1>
        <button onClick={bgChange}>Click me</button>
      </div>
    </>
  );
};

export default App;

